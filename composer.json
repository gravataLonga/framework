{
    "name": "gravatalonga/framework",
    "type": "library",
    "description": "My own backbone for my personals projects",
    "keywords": [
        "gravatalonga",
        "framework"
    ],
    "homepage": "https://github.com/gravatalonga/framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonathan Fontes",
            "email": "jonathan.alexey16@gmail.com",
            "homepage": "https://github.com/gravataLonga",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "gravatalonga/container": ">=1.8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.3",
        "infection/infection": "^0.25.4",
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "^9",
        "rector/rector": "^0.13.4"
    },
    "autoload": {
        "psr-4": {
            "Gravatalonga\\Framework\\": "src"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyze -l max src",
        "fix-style": "php-cs-fixer fix",
        "test": "XDEBUG_MODE=coverage phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
